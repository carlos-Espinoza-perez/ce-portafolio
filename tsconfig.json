{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "paths": {
      "@template/*": ["./src/UI/template/*"],
      "@organisms/*": ["./src/UI/organisms/*"],
      "@molecules/*": ["./src/UI/molecules/*"],
      "@atoms/*": ["./src/UI/atoms/*"]
    }
  },

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}